        width: 100%;
        border: none;
        background: transparent;
        padding: 12px 48px 12px 16px;
        font-size: 1rem;
        color: #0f172a;
    }

    .password-input-group input:focus {
        outline: none;
    }

    .password-visibility-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        background: none;
        color: #6366f1;
        font-weight: 600;
        cursor: pointer;
        padding: 6px 10px;
    }

    .change-password-hint {
        font-size: 0.9rem;
        color: #64748b;
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .change-password-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        justify-content: flex-end;
        margin-top: 8px;
    }

    .change-password-actions .btn {
        border-radius: 12px;
        padding: 10px 18px;
    }

    .change-password-actions .btn-light {
        background: #e2e8f0;
        color: #1e293b;
        border: 1px solid transparent;
    }

    .change-password-actions .btn-light:hover {
        background: #cbd5f5;
        color: #1e293b;
    }

    .password-policy {
        background: #f1f5f9;
        border-radius: 12px;
        padding: 12px 16px;
        font-size: 0.9rem;
        color: #475569;
    }

    @media (max-width: 768px) {
        .change-password-card {
            padding: 20px;
        }

        .change-password-actions {
            flex-direction: column;
            align-items: stretch;
        }

        .change-password-actions .btn {
            width: 100%;
        }
    }
</style>

<%- contentFor('js') %>
<script>
