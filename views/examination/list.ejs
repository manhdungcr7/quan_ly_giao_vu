  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  border-radius: 999px;
  font-size: 0.85rem;
  font-weight: 600;
  letter-spacing: 0.02em;
  background: #eef2f7;
  color: #495057;
}

.status-chip i {
  font-size: 0.8rem;
}

.status-chip--scheduled {
  background: #e7f1ff;
  color: #1f6feb;
}

.status-chip--progress {
  background: #fff3cd;
  color: #b58105;
}

.status-chip--completed {
  background: #e6f4ea;
  color: #1a7f37;
}

.status-chip--offline {
  background: #f4edf9;
  color: #6f42c1;
}

.status-chip--risk {
  background: #fde4ea;
  color: #c0325c;
}

.btn-group {
  display: flex;
  gap: 5px;
}

