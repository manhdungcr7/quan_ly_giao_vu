<!-- File Preview Modal -->
<div id="filePreviewModal" class="file-preview-modal">
  <div class="file-preview-content">
    <div class="file-preview-header">
      <h5 id="previewFileName">Xem tr∆∞·ªõc file</h5>
      <button class="close-preview" id="closePreviewBtn">&times;</button>
    </div>
    <div class="file-preview-body">
      <div id="previewContent"></div>
    </div>
  </div>
</div>

<script>
// File Preview Functions
function previewFile(fileId) {
  fetch(`/legal-documents/files/${fileId}/preview-info`)
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        document.getElementById('previewFileName').textContent = data.filename || 'Xem tr∆∞·ªõc file';
        const previewContent = document.getElementById('previewContent');
        
        if (data.type === 'pdf' && data.previewable) {
          previewContent.innerHTML = `<iframe src="/legal-documents/files/${fileId}/preview" class="file-preview-iframe"></iframe>`;
        } else if (data.type === 'image') {
          previewContent.innerHTML = `<img src="/legal-documents/files/${fileId}/preview" style="max-width: 100%; height: auto;" alt="${data.filename || 'Image'}">`;
        } else if (data.type === 'text') {
          previewContent.innerHTML = `<pre style="white-space: pre-wrap; font-family: monospace;">${data.content || ''}</pre>`;
        } else if (data.type === 'word' && data.previewable) {
          // Word: Hi·ªÉn th·ªã iframe (browser s·∫Ω t·∫£i file) ho·∫∑c d√πng Google Docs Viewer
          previewContent.innerHTML = `
            <div style="text-align: center; padding: 20px;">
              <p><i class="fas fa-file-word" style="font-size: 48px; color: #2b579a;"></i></p>
              <p><strong>File Word: ${data.filename || 'Document'}</strong></p>
              <p>Ch·ªçn c√°ch xem:</p>
              <div style="margin-top: 15px;">
                <a href="/legal-documents/files/${fileId}/download" class="btn btn-primary" style="margin: 5px;">
                  <i class="fas fa-download"></i> T·∫£i xu·ªëng ƒë·ªÉ xem
                </a>
                <button class="btn btn-info open-gdocs-viewer" data-file-id="${fileId}" style="margin: 5px;">
                  <i class="fas fa-external-link-alt"></i> Xem qua Google Docs
                </button>
              </div>
            </div>`;
        } else if (data.type === 'archive') {
          // RAR/ZIP: kh√¥ng th·ªÉ preview
          previewContent.innerHTML = `
            <div style="text-align: center; padding: 30px;">
              <p><i class="fas fa-file-archive" style="font-size: 48px; color: #ffa500;"></i></p>
              <p><strong>${data.filename || 'Archive'}</strong></p>
              <p style="color: #666; margin-top: 10px;">${data.message || 'File n√©n kh√¥ng h·ªó tr·ª£ xem tr∆∞·ªõc'}</p>
              <a href="/legal-documents/files/${fileId}/download" class="btn btn-success" style="margin-top: 15px;">
                <i class="fas fa-download"></i> T·∫£i xu·ªëng
              </a>
            </div>`;
        } else {
          previewContent.innerHTML = `<p>Kh√¥ng th·ªÉ xem tr∆∞·ªõc lo·∫°i file n√†y. <a href="/legal-documents/files/${fileId}/download">T·∫£i v·ªÅ ƒë·ªÉ xem</a></p>`;
        }
        
        document.getElementById('filePreviewModal').style.display = 'flex';
      }
    })
    .catch(error => {
      console.error('L·ªói xem tr∆∞·ªõc file:', error);
      alert('C√≥ l·ªói khi xem tr∆∞·ªõc file');
    });
}

function openGoogleDocsViewer(fileId) {
  // M·ªü Google Docs Viewer trong tab m·ªõi (c·∫ßn public URL)
  const downloadUrl = window.location.origin + '/legal-documents/files/' + fileId + '/download';
  const viewerUrl = `https://docs.google.com/viewer?url=${encodeURIComponent(downloadUrl)}&embedded=true`;
  window.open(viewerUrl, '_blank');
}

function closePreview() {
  document.getElementById('filePreviewModal').style.display = 'none';
  document.getElementById('previewContent').innerHTML = '';
}

// Event listeners
document.addEventListener('DOMContentLoaded', function() {
  // Preview file buttons
  document.querySelectorAll('.preview-file-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const fileId = this.getAttribute('data-file-id');
      previewFile(fileId);
    });
  });
  
  // Close preview button
  const closeBtn = document.getElementById('closePreviewBtn');
  if (closeBtn) {
    closeBtn.addEventListener('click', closePreview);
  }
  
  // Close modal when clicking outside
  const modal = document.getElementById('filePreviewModal');
  if (modal) {
    modal.addEventListener('click', function(e) {
      if (e.target === this) {
        closePreview();
      }
    });
  }
  
  // Google Docs viewer buttons (dynamically added)
  document.addEventListener('click', function(e) {
    if (e.target && e.target.classList.contains('open-gdocs-viewer')) {
      const fileId = e.target.getAttribute('data-file-id');
      openGoogleDocsViewer(fileId);
    }
  });
});
</script>