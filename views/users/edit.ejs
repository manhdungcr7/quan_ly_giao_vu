    font-size: 0.9rem;
    color: #64748b;
}
</style>

<%- contentFor('content') %>
<div class="users-edit-wrapper">
    <div class="users-edit-header">
        <div>
            <h1>Chỉnh sửa tài khoản</h1>
            <p>Cập nhật thông tin hồ sơ cho tài khoản <strong><%= editableUser.username %></strong>.</p>
            <div class="users-edit-meta">
                Vai trò hiện tại: <strong><%= inferredRoleLabel %></strong>
            </div>
        </div>
        <a href="/users" class="users-edit-back" aria-label="Quay lại danh sách người dùng">← Quay lại</a>
    </div>

    <form class="users-edit-form" method="post" action="/users/<%= editableUser.id %>">
        <div class="users-edit-group">
            <label for="full_name">Họ và tên <span class="required" aria-hidden="true">*</span></label>
            <input class="users-edit-input" type="text" id="full_name" name="full_name" value="<%= safeFullName %>" required maxlength="120">
        </div>

        <div class="users-edit-group">
            <label for="email">Email <span class="required" aria-hidden="true">*</span></label>
            <input class="users-edit-input" type="email" id="email" name="email" value="<%= safeEmail %>" required maxlength="120">
        </div>

        <div class="users-edit-group">
            <label for="phone">Số điện thoại</label>
            <input class="users-edit-input" type="tel" id="phone" name="phone" value="<%= safePhone %>" placeholder="Nhập 10-11 chữ số" pattern="[0-9]{10,11}">
        </div>

        <% if (isAdminView) { %>
            <div class="users-edit-group">
                <label for="role_id">Vai trò hệ thống</label>
                <select class="users-edit-select" id="role_id" name="role_id" required>
                    <option value="">-- Chọn vai trò --</option>
                    <% if (Array.isArray(roles) && roles.length) { %>
                        <% roles.forEach(function(roleOption) { %>
                            <% const optionLabel = roleLabelMap[roleOption.name] || roleOption.name; %>
                            <option value="<%= roleOption.id %>" <%= selectedRoleId === String(roleOption.id) ? 'selected' : '' %>><%= optionLabel %></option>
                        <% }); %>
                    <% } %>
                </select>
            </div>
        <% } else { %>
            <div class="users-edit-group">
                <label>Vai trò hệ thống</label>
                <input class="users-edit-input" type="text" value="<%= inferredRoleLabel %>" readonly>
                <input type="hidden" name="role_id" value="<%= selectedRoleId %>">
            </div>
        <% } %>

        <div class="users-edit-footer">
            <a href="/users" class="users-edit-cancel">Hủy</a>
            <button type="submit">Lưu thay đổi</button>
        </div>
    </form>
</div>
