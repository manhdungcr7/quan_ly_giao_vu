<%
const editableUser = userDetail || {};
const flashedData = (formData && typeof formData === 'object') ? formData : {};
const isAdminView = user && (user.role_name || user.roleName) === 'admin';
const resolveValue = (field, fallback) => {
    if (Object.prototype.hasOwnProperty.call(flashedData, field)) {
        const raw = flashedData[field];
        return raw === null || typeof raw === 'undefined' ? '' : raw;
    }
    if (typeof fallback === 'undefined' || fallback === null) {
        return '';
    }
    return fallback;
};
const safeFullName = resolveValue('full_name', editableUser.full_name);
const safeEmail = resolveValue('email', editableUser.email);
const safePhone = resolveValue('phone', editableUser.phone);
const selectedRoleId = (function(){
    const flashRole = resolveValue('role_id', null);
    if (flashRole !== null && flashRole !== '') {
        return String(flashRole);
    }
    if (editableUser.role_id) {
        return String(editableUser.role_id);
    }
    return '';
})();
const roleLabelMap = roleLabels || {};
const inferredRoleName = editableUser.role_name || editableUser.roleName || '';
const inferredRoleLabel = roleLabelMap[inferredRoleName] || inferredRoleName || 'Không xác định';
%>

<%- contentFor('css') %>
<link rel="stylesheet" href="/css/users.css?v=20241011">
