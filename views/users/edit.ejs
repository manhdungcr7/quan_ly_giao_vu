    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
}
.users-edit-header h1 {
    font-size: 1.6rem;
    margin: 0;
    color: #0f172a;
    font-weight: 700;
}
.users-edit-header p {
    margin: 0.35rem 0 0;
    color: #475569;
    font-size: 0.95rem;
}
.users-edit-back {
    color: #2563eb;
    font-weight: 600;
    text-decoration: none;
    padding-top: 0.25rem;
}
.users-edit-back:hover {
    text-decoration: underline;
}
.users-edit-form {
    display: grid;
    gap: 1.5rem;
}
.users-edit-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
