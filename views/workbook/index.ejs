   */
  getTasksForDay(day) {
    const taskList = document.querySelector(`.task-list-interactive[data-day="${day}"]`);
    if (!taskList) return [];

    const tasks = [];
    const taskItems = taskList.querySelectorAll('.task-item-inline');
    
    taskItems.forEach(item => {
